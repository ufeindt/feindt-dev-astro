---
import { config } from "../../config";
---

<section id="hero">
  <div>
    <div id="heroImage">
      <img src="/images/profile.jpg" alt="Ulrich Feindt" />
    </div>
    <div id="heroText">
      <h1>{config.name}</h1>
      <p>{config.title}</p>
      <p>
        I build modern web applications and tools that make work and life
        easier.
      </p>
      <div>
        <a href="#contact"> Get in Touch </a>
        <a href="#projects"> View Projects </a>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    align-items: center;
    display: flex;
    min-height: calc(100vh - 12rem);
    text-align: center;
  }

  img {
    border-radius: 50%;
  }

  div#heroText > h1 {
    color: var(--color-text-primary);
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-wrap: pretty;
  }

  div#heroText > p:first-of-type {
    color: var(--color-text-secondary);
    font-family: var(--font-display);
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  div#heroText > p:last-of-type {
    color: var(--color-text-tertiary);
    font-family: var(--font-sans);
    font-size: 1.125rem;
    margin-bottom: 3rem;
    margin-inline: auto;
  }

  div#heroText > div {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  div#heroText > div > a {
    border-radius: 0.5rem;
    text-decoration: none;
    font-family: var(--font-display);
    font-weight: 600;
    padding-block: 0.75rem;
    padding-inline: 2rem;
    transition: var(--transition-time);
  }

  div#heroText > div > a:first-of-type {
    background-color: var(--color-accent);
    color: var(--color-text-primary);
  }

  div#heroText > div > a:hover:first-of-type {
    background-color: var(--color-accent-hover);
  }

  div#heroText > div > a:last-of-type {
    border: 1px solid var(--color-accent);
    color: var(--color-accent-hover);
  }

  div#heroText > div > a:hover:last-of-type {
    background-color: var(--color-accent);
    color: var(--color-text-primary);
  }

  @media (width >= 48rem) {
    div#heroTextv > p:first-of-type {
      font-size: 1.5rem;
    }

    div#heroText > p:last-of-type {
      font-size: 1.25rem;
    }

    div#heroText > h1 {
      font-size: 3.75rem;
    }
  }

  @media (width >= 72rem) {
    section > div {
      display: flex;
      gap: 8rem;
    }
  }
</style>
