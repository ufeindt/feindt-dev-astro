---
import About from "../components/homepage/About.astro";
import Contact from "../components/homepage/Contact.astro";
import Hero from "../components/homepage/Hero.astro";
import Projects from "../components/homepage/Projects.astro";
import Skills from "../components/homepage/Skills.astro";

import Layout from "../layouts/Layout.astro";
---

<Layout description="Portfolio website and blog" image="/images/profile.jpg">
  <Hero />
  <About />
  <Skills />
  <Projects />
  <Contact />
</Layout>

<style is:global>
  h2 {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 2rem;
    text-align: center;
  }

  section {
    padding-block: 4rem;
  }
  section:nth-child(odd) {
    background-color: var(--color-bg-primary);
  }

  section:nth-child(even) {
    background-color: var(--color-bg-secondary);
  }
</style>
